<h1>
  <%= @task.title %>
</h1>

<p>
  Description: <%= @task.details %>
</p>

<p>
  Completed: <%= @task.completed %>
</p>

<%= link_to "See all tasks",
  tasks_path  %>

<%= link_to "Update task",
  edit_task_path %>

<%= link_to "Delete task",
  task_path(@task), method: :delete, data: { confirm: "Are you sure?" } %>
